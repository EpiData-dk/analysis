// #6# Testing for valid / invalid assignments
// J. Hockin
// Error count should be 2

new p !size:=100 !title:="Test assignments";
new v id i := _n;
new v s s;
new g x[10] s;
new g i i;
for i:=1 to 10 do x[i]:="x"+i;
i:=0;

// valid assignments with vectors
s := x[1];
select s="x1" do count;
assert ($count=100);
i := id[1];
assert (i=1);
s := "ID: "+id;
select s="ID: 1" do count;
assert ($count=1);
s := $variable[1];
select s="id" do count;
assert ($count=100);

// invalid assignments
s := x;
assert (s[1]="ID: 1");
s := $variable;
assert (s[1]="ID: 1");
